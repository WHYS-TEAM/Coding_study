def solution(maps):
    currs = [(0,0)]
    depth = 1

    while currs:
        if maps[-1][-1] != 1: return maps[-1][-1]
        
        depth += 1
        for _ in range(len(currs)):
            c = currs.pop(0)
            for x,y in [(c[0]+d[0], c[1]+d[1]) for d in [(1,0), (-1,0), (0,1), (0,-1)]]:
                if (0<=x<len(maps)) and (0<=y<len(maps[0])) and (maps[x][y]==1):
                    maps[x][y] = depth
                    currs.append((x,y))
    
    return -1
    
